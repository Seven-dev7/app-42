        <%= f.input :title, label: "Le titre de l'article", error: 'Un titre est obligatoire' %>
      </div>
      <div class="input-form">
        <%= f.input :content, label: "Contenu de l'article" %>
      </div>
      <div class="input-form">
        <%= f.association :user, as: :hidden, input_html: {value: current_user.id} %>
      </div>
      <div class="submit-form", style="margin-left:20%;margin-bottom:3%;">


<div class="wrapper fadeInDown"> 
  <div id="formContent">
    <!-- Tabs Titles -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://previews.123rf.com/images/sarahdesign/sarahdesign1403/sarahdesign140300871/26699464-login-icon-or-button-login-login-button-login-icon-login-sign-icon-button-sign-sign-in.jpg" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", input_html: { class: 'fadeIn second' }%><br>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", input_html: { class: 'fadeIn third' } %><br>
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br>
    <% end %>
    <%= f.submit "Log in", input_html: { class: 'fadeIn fourth' } %>
    </form>
<%end%>
    <!-- Remind Passowrd -->
    <div id="formFooter">
      <%= link_to "Mot de passe oubliÃ©", new_password_path(resource_name) %><br>
      <%= link_to "Se connecter via twitter", user_twitter_omniauth_authorize_path %><br>
      <%= link_to "S'enregistrer", new_registration_path(resource_name) %><br />
    </div>

  </div>
</div>



<h2 class="h2-form">Editer son profil</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <div class="form-create">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="input-form">
        <%= f.input :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="input-form">
        <%= f.input :first_name, autofocus: true, autocomplete: "Prenom" %>
      </div>

      <div class="input-form">
        <%= f.input :last_name, autofocus: true, autocomplete: "Nom" %>
      </div>

      <div class="input-form">
        <%= f.input :age, autofocus: true, autocomplete: "Age" %>
      </div>

      <div class="input-form">
        <%= f.input :job, autofocus: true, autocomplete: "Emploi" %>
      </div>

      <div class="input-form">
        <%= f.file_field :avatar %>
      </div>

      <div class="input-form">
        <%= f.input :password, autocomplete: "new-password" %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br>
      </div>

      <div class="input-form">
        <%= f.input :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="input-form">
        <%= f.label :current_password %> <i>(Entrez votre mot de passe actuel pour confirmer les changements)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="submit-form">
        <%= f.submit "Sign up" %>
      </div>
      <div class="formFooter">
        <%= link_to "Se connecter via twitter", user_twitter_omniauth_authorize_path %><br>
        <%= link_to "Retour", home_profil_path %>
      </div>
      <% end %>
    </div>






